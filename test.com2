parameters {
    wire: tx;
    number: baud;
}

variables {
    byte: data;
    byte: msg;
    bit: list;
}

states {
    IDLE: {
        tx <- 1;
    }[
        (wire: tx);
    ]
    START: {
        tx <- 0;
    }[
        (time: 1 / baud);
    ]
    {
        tx <- data[2];
    }[
        (time:1 / baud):
            data[0] => IDLE,
            => START;
        (wire: tx);
    ]
}
